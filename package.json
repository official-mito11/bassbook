{
  "name": "bassbook",
  "private": true,
  "type": "module",
  "version": "0.4.0",
  "workspaces": [
    "packages/*"
  ],
  "exports": {
    "./react": "./packages/react/src/index.ts",
    "./core": "./packages/core/src/index.ts",
    "./storybook": "./packages/storybook/src/index.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "latest",
    "lerna": "^9.0.1",
    "prettier": "^3.7.4",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tsup": "^8.2.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {},
  "scripts": {
    "build": "lerna run build --stream",
    "publish": "lerna publish",
    "typecheck": "lerna run typecheck --stream",
    "format": "prettier --write \"packages/**/src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"packages/**/src/**/*.{ts,tsx}\""
  }
}
