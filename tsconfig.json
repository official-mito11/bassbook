{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "Preserve",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices - Strict mode enabled
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    // Stricter flags (enabled for better code quality)
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noPropertyAccessFromIndexSignature": true,
    
    "baseUrl": ".",
    "paths": {
      "@bassbook/core": ["./packages/core/src/index.ts"],
      "@bassbook/react": ["./packages/react/src/index.ts"],
      "@bassbook/storybook": ["./packages/storybook/src/index.ts"]
    },
    "types": ["node", "bun"]
  },
  "include": ["packages"]
}
